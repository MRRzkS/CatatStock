<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.catatstok.controller.MainLayoutController">
   <left>
      <VBox prefHeight="800.0" prefWidth="250.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <Label text="CATATSTOK" textFill="#4361ee">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="40.0" left="20.0" top="30.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="btnDashboard" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showDashboard" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Dashboard" />
            <Button fx:id="btnBarang" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showBarang" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Manajemen Barang" />
            <Button fx:id="btnStok" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showStok" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Manajemen Stok" />
            <Button fx:id="btnKategori" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showKategori" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Manajemen Kategori" />
            <Button fx:id="btnLaporan" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#showLaporan" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" text="Laporan" />
            <VBox alignment="BOTTOM_LEFT" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleLogout" prefHeight="50.0" prefWidth="250.0" styleClass="sidebar-button" style="-fx-text-fill: #dc3545;" text="Logout" />
               </children>
            </VBox>
         </children>
      </VBox>
   </left>
   <center>
       <!-- Content will be loaded here -->
   </center>
</BorderPane>
