<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.catatstok.controller.ItemDialogController" style="-fx-background-color: white; -fx-padding: 20;">
    <children>
        <Label fx:id="titleLabel" text="Tambah Barang Baru" styleClass="h2" />
        
        <VBox spacing="5">
            <Label text="Kode SKU" style="-fx-font-weight: bold;"/>
            <TextField fx:id="skuField" promptText="Contoh: ATK-001" />
        </VBox>

        <VBox spacing="5">
            <Label text="Nama Barang" style="-fx-font-weight: bold;"/>
            <TextField fx:id="nameField" promptText="Contoh: Buku Tulis" />
        </VBox>

        <HBox spacing="15">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Kategori" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="categoryComboBox" promptText="Pilih Kategori" maxWidth="Infinity"/>
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Satuan" style="-fx-font-weight: bold;"/>
                <TextField fx:id="unitField" promptText="Pcs, Unit, Box..." />
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Stok Awal" style="-fx-font-weight: bold;"/>
                <TextField fx:id="stockField" promptText="0" />
            </VBox>
        </HBox>

        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button text="Batal" onAction="#handleCancel" style="-fx-background-color: #e9ecef; -fx-text-fill: #495057;"/>
            <Button text="Simpan" onAction="#handleSave" styleClass="button"/>
        </HBox>
    </children>
</VBox>
