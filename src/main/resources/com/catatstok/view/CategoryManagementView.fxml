<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.catatstok.controller.CategoryManagementController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <Label text="Manajemen Kategori" styleClass="h1" />

        <HBox spacing="10.0" alignment="CENTER_RIGHT" styleClass="card">
            <children>
                <Button text="+ Tambah Kategori Baru" styleClass="button" onAction="#handleAddCategory"/>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>

        <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="idColumn" text="ID KATEGORI" prefWidth="150.0" />
                <TableColumn fx:id="nameColumn" text="NAMA KATEGORI" prefWidth="250.0" />
                <TableColumn fx:id="descriptionColumn" text="DESKRIPSI" prefWidth="350.0" />
                <TableColumn fx:id="actionColumn" text="AKSI" prefWidth="150.0" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
