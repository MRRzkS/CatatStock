<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.catatstok.controller.StockManagementController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <Label text="Manajemen Stok" styleClass="h1" />

        <HBox spacing="20.0">
            <Button text="+ Catat Stok Masuk (Inbound)" styleClass="button, button-success" prefWidth="400" prefHeight="50" onAction="#handleInbound"/>
            <Button text="- Catat Stok Keluar (Outbound)" styleClass="button, button-danger" prefWidth="400" prefHeight="50" onAction="#handleOutbound"/>
        </HBox>

        <Label text="Histori Transaksi Stok" styleClass="h2">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>

        <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="dateColumn" text="TANGGAL" prefWidth="200.0" />
                <TableColumn fx:id="typeColumn" text="TIPE" prefWidth="150.0" />
                <TableColumn fx:id="skuColumn" text="BARANG (SKU)" prefWidth="200.0" />
                <TableColumn fx:id="qtyColumn" text="KUANTITAS" prefWidth="100.0" />
                <TableColumn fx:id="userColumn" text="PETUGAS" prefWidth="150.0" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
