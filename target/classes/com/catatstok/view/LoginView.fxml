<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.catatstok.controller.LoginController" style="-fx-background-color: #f8f9fa;">
    <children>
        <VBox alignment="CENTER" maxWidth="400" spacing="20" styleClass="card">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <children>
                <Label text="CATATSTOK" textFill="#4361ee">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <Label text="Silakan login untuk melanjutkan" textFill="#6c757d">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>
                
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Username" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="usernameField" promptText="Masukkan username" />
                </VBox>
                
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Password" style="-fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordField" promptText="Masukkan password" />
                </VBox>

                <Label fx:id="errorLabel" textFill="red" visible="false" />

                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefWidth="Infinity" text="Login" />
            </children>
        </VBox>
    </children>
</StackPane>
