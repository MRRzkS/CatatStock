<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.catatstok.controller.StockDialogController" style="-fx-background-color: white; -fx-padding: 20;">
    <children>
        <Label fx:id="titleLabel" text="Catat Stok Masuk (Inbound)" styleClass="h2" />
        
        <VBox spacing="5">
            <Label text="Pilih Barang" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="itemComboBox" promptText="Pilih Barang" maxWidth="Infinity"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Jumlah" style="-fx-font-weight: bold;"/>
            <TextField fx:id="quantityField" promptText="1" />
        </VBox>

        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button text="Batal" onAction="#handleCancel" style="-fx-background-color: #e9ecef; -fx-text-fill: #495057;"/>
            <Button text="Simpan" onAction="#handleSave" styleClass="button, button-success" fx:id="saveButton"/>
        </HBox>
    </children>
</VBox>
